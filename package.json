{
  "name": "streamline",
  "displayName": "Streamline",
  "description": "Streamline your workflow",
  "version": "0.4.0",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:fileExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "relatedFiles",
          "name": "Related files",
          "visibility": "visible"
        }
      ]
    },
    "commands": [
      {
        "command": "streamline.select-scope",
        "title": "Streamline: Select Scope",
        "icon": "$(chevron-down)"
      },
      {
        "command": "streamline.scope",
        "title": "Streamline: Scope",
        "icon": "$(circle-large-outline)"
      },
      {
        "command": "streamline.unscope",
        "title": "Streamline: Unscope",
        "icon": "$(pass-filled)"
      },
      {
        "command": "streamline.clear-scope",
        "title": "Streamline: Clear Current Scope",
        "icon": "$(circle-slash)"
      },
      {
        "command": "streamline.toggle-scope",
        "title": "Streamline: Toggle Scope",
        "icon": "$(activate-breakpoints)"
      },
      {
        "command": "streamline.toggle-scope-for-file",
        "title": "Streamline: Toggle Scope for File"
      },
      {
        "command": "streamline.suggest-scopes-for-file",
        "title": "Streamline: Suggest Scopes for File"
      },
      {
        "command": "streamline.quick-open-related-files",
        "title": "Streamline: Quick Open Related Files"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "streamline.unscope",
          "group": "navigation@1",
          "when": "view == 'workbench.explorer.fileView' && streamline.scoped"
        },
        {
          "command": "streamline.scope",
          "group": "navigation@1",
          "when": "view == 'workbench.explorer.fileView' && !streamline.scoped"
        }
      ],
      "explorer/context": [
        {
          "command": "streamline.toggle-scope-for-file",
          "group": "2_workspace@1",
          "when": "activeViewlet == 'workbench.view.explorer'"
        }
      ]
    },
    "configuration": {
      "title": "Streamline",
      "properties": {
        "streamline.scopeEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Scope enabled"
        },
        "streamline.currentScope": {
          "type": "string",
          "default": "default",
          "description": "Current scope"
        },
        "streamline.scopes": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "default": {
            "default": []
          },
          "description": "Scopes"
        },
        "streamline.highlightedPaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Highlighted paths"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "deploy": "rimraf ./out && npm run test && vsce package && vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.5"
  },
  "publisher": "vitaly-rudenko",
  "icon": "./icon.png",
  "repository": {
    "url": "https://github.com/vitaly-rudenko/streamline"
  }
}
