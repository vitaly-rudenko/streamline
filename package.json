{
  "name": "streamline",
  "displayName": "Streamline",
  "description": "Streamline your workflow",
  "version": "0.10.0",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:fileExplorer"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "rimraf ./out && tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "dev": " nodemon -x 'npm run compile'",
    "deploy": "npm run compile && npm run test && vsce package && vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.5"
  },
  "publisher": "vitaly-rudenko",
  "icon": "./icon.png",
  "repository": {
    "url": "https://github.com/vitaly-rudenko/streamline"
  },
  "dependencies": {
    "date-fns": "^3.6.0",
    "lru-cache": "^10.2.2"
  },
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "tabHistory",
          "name": "Tab history",
          "visibility": "collapsed",
          "icon": "$(history)"
        },
        {
          "id": "relatedFiles",
          "name": "Related files",
          "visibility": "collapsed",
          "icon": "$(sparkle)"
        },
        {
          "id": "bookmarks",
          "name": "Bookmarks",
          "visibility": "collapsed",
          "icon": "$(bookmark)"
        }
      ]
    },
    "commands": [
      {
        "command": "streamline.scopedPaths.changeCurrentScope",
        "title": "Streamline: Select Scope",
        "icon": "$(chevron-down)"
      },
      {
        "command": "streamline.scopedPaths.scope",
        "title": "Scope",
        "icon": "$(circle-large-outline)"
      },
      {
        "command": "streamline.scopedPaths.unscope",
        "title": "Unscope",
        "icon": "$(pass-filled)"
      },
      {
        "command": "streamline.scopedPaths.clearCurrentScope",
        "title": "Streamline: Clear Current Scope",
        "icon": "$(circle-slash)"
      },
      {
        "command": "streamline.scopedPaths.toggleScope",
        "title": "Streamline: Toggle Scope",
        "icon": "$(activate-breakpoints)"
      },
      {
        "command": "streamline.relatedFiles.refresh",
        "title": "Refresh Related Files",
        "icon": "$(refresh)"
      },
      {
        "command": "streamline.relatedFiles.toggleUseRelativePaths",
        "title": "Toggle Relative Paths in Related Files",
        "icon": "$(selection)"
      },
      {
        "command": "streamline.relatedFiles.toggleUseExcludes",
        "title": "Toggle Excludes in Related Files",
        "icon": "$(exclude)"
      },
      {
        "command": "streamline.relatedFiles.copyPath",
        "title": "Copy Path of Related File",
        "icon": "$(files)"
      },
      {
        "command": "streamline.scopedPaths.toggleScopeForPath",
        "title": "Add/Remove Selected from Current Scope"
      },
      {
        "command": "streamline.relatedFiles.quickOpen",
        "title": "Streamline: Quick Open Related Files"
      },
      {
        "command": "streamline.tabHistory.refresh",
        "title": "Refresh Tab History",
        "icon": "$(refresh)"
      },
      {
        "command": "streamline.tabHistory.clear",
        "title": "Clear Tab History",
        "icon": "$(trash)"
      },
      {
        "command": "streamline.tabHistory.enableBackup",
        "title": "Enable backup",
        "icon": "$(eye-closed)"
      },
      {
        "command": "streamline.tabHistory.disableBackup",
        "title": "Disable backup",
        "icon": "$(eye)"
      },
      {
        "command": "streamline.bookmarks.add",
        "title": "Bookmark Selected",
        "icon": "$(bookmark)"
      },
      {
        "command": "streamline.bookmarks.addToList",
        "title": "Bookmark Selected to List...",
        "icon": "$(bookmark)"
      },
      {
        "command": "streamline.bookmarks.revealInExplorer",
        "title": "Reveal in Explorer",
        "icon": "$(eye)"
      },
      {
        "command": "streamline.bookmarks.delete",
        "title": "Delete bookmark",
        "icon": "$(trash)"
      },
      {
        "command": "streamline.bookmarks.changeCurrentList",
        "title": "Change Current List",
        "icon": "$(issue-closed)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "streamline.scopedPaths.unscope",
          "group": "navigation@1",
          "when": "view == 'workbench.explorer.fileView' && streamline.scopedPaths.enabled"
        },
        {
          "command": "streamline.scopedPaths.scope",
          "group": "navigation@1",
          "when": "view == 'workbench.explorer.fileView' && !streamline.scopedPaths.enabled"
        },
        {
          "command": "streamline.relatedFiles.toggleUseExcludes",
          "group": "navigation@1",
          "when": "view == relatedFiles"
        },
        {
          "command": "streamline.relatedFiles.toggleUseRelativePaths",
          "group": "navigation@2",
          "when": "view == relatedFiles"
        },
        {
          "command": "streamline.relatedFiles.refresh",
          "group": "navigation@3",
          "when": "view == relatedFiles"
        },
        {
          "command": "streamline.tabHistory.enableBackup",
          "group": "navigation@1",
          "when": "view == tabHistory && !streamline.tabHistory.backup.enabled"
        },
        {
          "command": "streamline.tabHistory.disableBackup",
          "group": "navigation@1",
          "when": "view == tabHistory && streamline.tabHistory.backup.enabled"
        },
        {
          "command": "streamline.tabHistory.clear",
          "group": "navigation@2",
          "when": "view == tabHistory"
        },
        {
          "command": "streamline.tabHistory.refresh",
          "group": "navigation@3",
          "when": "view == tabHistory"
        }
      ],
      "view/item/context": [
        {
          "command": "streamline.relatedFiles.copyPath",
          "when": "view == relatedFiles && viewItem == relatedFile",
          "group": "inline"
        },
        {
          "command": "streamline.bookmarks.revealInExplorer",
          "when": "view == bookmarks && (viewItem == file || viewItem == folder)",
          "group": "inline@1"
        },
        {
          "command": "streamline.bookmarks.changeCurrentList",
          "when": "view == bookmarks && viewItem == list",
          "group": "inline@1"
        },
        {
          "command": "streamline.bookmarks.delete",
          "when": "view == bookmarks",
          "group": "inline@2"
        }
      ],
      "explorer/context": [
        {
          "command": "streamline.scopedPaths.toggleScopeForPath",
          "group": "2_workspace@1",
          "when": "activeViewlet == 'workbench.view.explorer'"
        },
        {
          "command": "streamline.bookmarks.add",
          "group": "2_workspace@2"
        },
        {
          "command": "streamline.bookmarks.addToList",
          "group": "2_workspace@3"
        }
      ],
      "editor/context": [
        {
          "command": "streamline.bookmarks.add",
          "group": "1_context@1"
        },
        {
          "command": "streamline.bookmarks.addToList",
          "group": "1_context@2"
        }
      ]
    },
    "configuration": {
      "title": "Streamline",
      "properties": {
        "streamline.scopedPaths.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Scope enabled"
        },
        "streamline.scopedPaths.currentScope": {
          "type": "string",
          "default": "default",
          "description": "Current scope"
        },
        "streamline.scopedPaths.scopes": {
          "type": "object",
          "default": {},
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "description": "Scopes"
        },
        "streamline.highlightedPaths.patterns": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Highlighted paths"
        },
        "streamline.relatedFiles.useRelativePaths": {
          "type": "boolean",
          "default": true,
          "description": "Use relative paths in related files view"
        },
        "streamline.relatedFiles.useExcludes": {
          "type": "boolean",
          "default": true,
          "description": "Use excludes in related files view"
        },
        "streamline.relatedFiles.exclude": {
          "type": "object",
          "default": {},
          "additionalProperties": {
            "type": "boolean"
          },
          "description": "Custom exclude patterns for related files view"
        },
        "streamline.tabHistory.backup.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable tab history backup"
        },
        "streamline.tabHistory.backup.size": {
          "type": "number",
          "default": 100,
          "description": "Tab history backup size"
        },
        "streamline.tabHistory.backup.records": {
          "type": "object",
          "default": {},
          "additionalProperties": {
            "type": "number"
          },
          "description": "Tab history backup records"
        },
        "streamline.bookmarks.currentList": {
          "type": "string",
          "default": "default",
          "description": "Current bookmarks list"
        },
        "streamline.bookmarks.serializedBookmarks": {
          "type": "array",
          "default": [],
          "description": "Serialized bookmarks"
        }
      }
    }
  }
}
