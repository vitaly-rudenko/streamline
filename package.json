{
  "name": "streamline",
  "displayName": "Streamline",
  "description": "Streamline your workflow",
  "version": "0.8.2",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:fileExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "tabHistory",
          "name": "Tab history",
          "visibility": "collapsed",
          "icon": "$(history)"
        },
        {
          "id": "relatedFiles",
          "name": "Related files",
          "visibility": "collapsed",
          "icon": "$(sparkle)"
        }
      ]
    },
    "commands": [
      {
        "command": "streamline.select-scope",
        "title": "Streamline: Select Scope",
        "icon": "$(chevron-down)"
      },
      {
        "command": "streamline.scope",
        "title": "Scope",
        "icon": "$(circle-large-outline)"
      },
      {
        "command": "streamline.unscope",
        "title": "Unscope",
        "icon": "$(pass-filled)"
      },
      {
        "command": "streamline.clear-scope",
        "title": "Streamline: Clear Current Scope",
        "icon": "$(circle-slash)"
      },
      {
        "command": "streamline.toggle-scope",
        "title": "Streamline: Toggle Scope",
        "icon": "$(activate-breakpoints)"
      },
      {
        "command": "streamline.refresh-related-files",
        "title": "Refresh Related Files",
        "icon": "$(refresh)"
      },
      {
        "command": "streamline.toggle-use-relative-paths-in-related-files",
        "title": "Toggle Use Relative Paths Related Files",
        "icon": "$(selection)"
      },
      {
        "command": "streamline.toggle-use-excludes-in-related-files",
        "title": "Toggle Excludes in Related Files",
        "icon": "$(exclude)"
      },
      {
        "command": "streamline.copy-related-file-path",
        "title": "Copy Path of Related File",
        "icon": "$(files)"
      },
      {
        "command": "streamline.toggle-scope-for-file",
        "title": "Toggle Scope for File"
      },
      {
        "command": "streamline.suggest-scopes-for-file",
        "title": "Streamline: Suggest Scopes for File"
      },
      {
        "command": "streamline.quick-open-related-files",
        "title": "Streamline: Quick Open Related Files"
      },
      {
        "command": "streamline.refresh-tab-history",
        "title": "Refresh Tab History",
        "icon": "$(refresh)"
      },
      {
        "command": "streamline.clear-tab-history",
        "title": "Clear Tab History",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "streamline.unscope",
          "group": "navigation@1",
          "when": "view == 'workbench.explorer.fileView' && streamline.scopeEnabled"
        },
        {
          "command": "streamline.scope",
          "group": "navigation@1",
          "when": "view == 'workbench.explorer.fileView' && !streamline.scopeEnabled"
        },
        {
          "command": "streamline.toggle-use-excludes-in-related-files",
          "group": "navigation@1",
          "when": "view == relatedFiles"
        },
        {
          "command": "streamline.toggle-use-relative-paths-in-related-files",
          "group": "navigation@2",
          "when": "view == relatedFiles"
        },
        {
          "command": "streamline.refresh-related-files",
          "group": "navigation@3",
          "when": "view == relatedFiles"
        },
        {
          "command": "streamline.clear-tab-history",
          "group": "navigation@1",
          "when": "view == tabHistory"
        },
        {
          "command": "streamline.refresh-tab-history",
          "group": "navigation@2",
          "when": "view == tabHistory"
        }
      ],
      "view/item/context": [
        {
          "command": "streamline.copy-related-file-path",
          "when": "view == relatedFiles && viewItem == relatedFile",
          "group": "inline"
        }
      ],
      "explorer/context": [
        {
          "command": "streamline.toggle-scope-for-file",
          "group": "2_workspace@1",
          "when": "activeViewlet == 'workbench.view.explorer'"
        }
      ]
    },
    "configuration": {
      "title": "Streamline",
      "properties": {
        "streamline.scopeEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Scope enabled"
        },
        "streamline.currentScope": {
          "type": "string",
          "default": "default",
          "description": "Current scope"
        },
        "streamline.scopes": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "default": {
            "default": []
          },
          "description": "Scopes"
        },
        "streamline.highlightedPaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Highlighted paths"
        },
        "streamline.useRelativePathsInRelatedFiles": {
          "type": "boolean",
          "default": true,
          "description": "Use relative paths in related files view"
        },
        "streamline.useExcludesInRelatedFiles": {
          "type": "boolean",
          "default": true,
          "description": "Use excludes in related files view"
        },
        "streamline.relatedFiles.exclude": {
          "type": "object",
          "default": {},
          "description": "Custom exclude patterns for related files view"
        },
        "streamline.tabHistory.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable tab history backup"
        },
        "streamline.tabHistory.records": {
          "type": "object",
          "default": {},
          "description": "Tab history backup records"
        },
        "streamline.tabHistory.size": {
          "type": "number",
          "default": 25,
          "description": "Tab history backup size"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "deploy": "rimraf ./out && npm run test && vsce package && vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.5"
  },
  "publisher": "vitaly-rudenko",
  "icon": "./icon.png",
  "repository": {
    "url": "https://github.com/vitaly-rudenko/streamline"
  },
  "dependencies": {
    "date-fns": "^3.6.0",
    "lru-cache": "^10.2.2"
  }
}
